<!DOCTYPE html>
<html>
<head>
    <title>City</title>
    <link rel="stylesheet" type="text/css" href="../css/Poke.css">
    <link rel="stylesheet" type="text/css" href="../css/city_preview.css">
    <script src="/city_preview.js"></script>
</head>

<body>
    <h1 >City: </h1>
    <div class="container">
        <button onclick="goToMap()">‚Üê <b>Map</b></button>
        <button><b>Visit Destination</b></button>
    </div>
    
    <h2>Trainer</h2>
    <table>
        <tr>
            <th>Trainer</th>
            <th>Reward</th>
            <th>avg Team Level</th>
        </tr>
        <tr>
            <td>Ash</td>
            <td>1500</td>
            <td>87</td>
        </tr>
    </table>

    <h2>Pokemon</h2>
    <table>
        <tr>
            <th>Number</th>
            <th>Location</th>
            <th>Blueprint</th>
            <th>Probability in %</th>
            <th>Level Range</th>
        </tr>
            <% pokemonSpawns.forEach(spawn => { %>
            <tr>
                <td><%= spawn.row %></td>
                <td><%= spawn.location %></td>
                <td><%= spawn.name %></td>
                <td><%= spawn.probability %></td>
                <td><%= spawn.min_level %> - <%= spawn.max_level%></td>
            </tr>
        <% }); %>
    </table>
</body>
</html>